<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Champ pour saisir l'ID de l'application -->
    <EditText
        android:id="@+id/edit_application_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez l'ID de l'application"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="16sp" />

    <!-- Bouton pour rechercher l'application -->
    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Rechercher"
        android:padding="8dp" />

    <!-- TextView pour afficher le nom de l'application -->
    <TextView
        android:id="@+id/text_application_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aucune application sélectionnée"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- TextView pour afficher les configurations associées -->
    <TextView
        android:id="@+id/text_configurations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Aucune configuration associée"
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Bouton pour supprimer l'application -->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Supprimer"
        android:padding="8dp"
        android:enabled="false" />

    <!-- Indicateur de chargement -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>