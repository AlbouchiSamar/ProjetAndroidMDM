<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter une nouvelle application"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'application"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le nom (ex: NewPipe)"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Package -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du package"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_pkg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le package (ex: org.schabi.newpipe)"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez la version (ex: 0.23.1)"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <!-- Version Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code de version"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_version_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le code de version (ex: 987)"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <!-- Show Icon Checkbox -->
        <CheckBox
            android:id="@+id/check_show_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afficher l'icône"
            android:checked="true"
            android:layout_marginBottom="12dp"/>

        <!-- Upload APK Button -->
        <Button
            android:id="@+id/btn_upload_apk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Téléverser APK"
            android:layout_marginBottom="12dp"/>

        <!-- URL Display -->
        <TextView
            android:id="@+id/text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL: (sera affiché après le téléversement)"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"/>

        <!-- Validate Package Button -->
        <Button
            android:id="@+id/btn_validate_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider le package"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <!-- Create App Button -->
        <Button
            android:id="@+id/btn_create_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créer l'application"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <!-- Configuration Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sélectionner une configuration"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/spinner_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Select Configuration Button -->
        <Button
            android:id="@+id/btn_select_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charger les configurations"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <!-- Install Button -->
        <Button
            android:id="@+id/btn_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installer sur les appareils"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>