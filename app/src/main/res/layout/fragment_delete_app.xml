<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_configuration_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de la configuration"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_application_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de l'application"
        android:inputType="number"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_uninstall_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DÃ©sinstaller l'application"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp" />
</LinearLayout>